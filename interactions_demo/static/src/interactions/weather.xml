<templates id="template" xml:space="preserve">

<t t-name="interactions_demo.s_weather.cards">
    <t t-foreach="days" t-as="day" t-key="day.date">
        <div class="card col mx-2 p-0">
            <img class="card-img-top img-fluid" t-attf-src="/interactions_demo/static/src/img/#{day.img}.svg" t-att-alt="day[1]"/>
            <div class="card-body">
                <h3 class="h6 card-subtitle" t-out="day.date" />
                <p class="h5 card-title">
                    <t t-out="day.temp"/>ÂºC
                </p>
            </div>
        </div>
    </t>
</t>

</templates>
