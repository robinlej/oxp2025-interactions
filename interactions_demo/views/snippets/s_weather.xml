<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<template id="s_weather" name="Weather Forecast Snippet">
    <section class="pt32 pb32 s_weather" data-location-name="Brussels">
        <div class="container">
            <h2 class="h5 classic"><span class="weather-location-name o_not_editable"/>'s Weather</h2>
            <label for="weather-location-input o_not_editable">
                What's the weather in:
                <input id="weather-location-input" name="weather-location-input" type="text" placeholder="Brussels"/>
            </label>

            <!-- "Add snippet" dialog preview with the `.s_dialog_preview` class -->
            <div class="row align-items-center s_dialog_preview">
                <t t-foreach="[
                        ('Monday', 'clouds', '14'),
                        ('Tuesday', 'rain', '12'),
                        ('Wednesday', 'sun', '18'),
                        ('Thursday', 'sun_clouds', '18'),
                        ('Friday', 'clouds', '16')
                    ]" t-as="day">
                    <div class="card col mx-2 p-0">
                        <img class="card-img-top img-fluid" t-att-src="'/interactions_demo/static/src/img/' + day[1] + '.svg'" t-att-alt="day[1]"/>
                        <div class="card-body">
                            <div class="h6" t-out="day[0]"/>
                            <p class="h5 card-title">
                                <t t-out="day[2]"/>Â°C
                            </p>
                        </div>
                    </div>
                </t>
            </div>
            <div class="align-items-center my-3 weather-cards-container o_not_editable"/>
        </div>
    </section>
</template>

</odoo>
